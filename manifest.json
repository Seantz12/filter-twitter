{
  "manifest_version": 3,
  "name": "Filter Twitter",
  "version": "1.0",

  "description": "Adds a custom filter to remove posts from your timeline",
  "homepage_url": "https://github.com/Seantz12/filter-twitter",

  "icons": {
    "48": "icons/placeholder.png"
  },

  "action": {
    "default_icon": "icons/placeholder.png",
    "default_title": "Filter Twitter",
    "default_popup": "popup/filter.html"
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": ["background_scripts/background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content_scripts/filter_twitter.js"]
    }
  ],

  "permissions": [
    "webNavigation",
    "activeTab",
    "storage",
    "tabs"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "filter-twitter@example.com"
    }
  }

}
